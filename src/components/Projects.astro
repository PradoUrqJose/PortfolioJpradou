---
import Angular from "../assets/projects/Angular.astro"
import Spring from "../assets/projects/Spring.astro";
import Tailwind from "../assets/projects/Tailwind.astro";
const TAGS = {
    ANGULAR: {
        name: "Angular.js",
        class: "bg-[#571121] text-white",
        icon: Angular
    },
    SPRING: {
        name: "Spring Boot",
        class: "bg-[#29500f] text-white",
        icon: Spring
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind
    }
}
const PROJECTS = [
    {
        title: "SportCenterShift - Sistema de gestión de turnos",
        description: "Desarrollé un sistema desde cero para reemplazar hojas de Excel desorganizadas. Implementé un frontend intuitivo con Angular y Tailwind CSS, conectado a un backend en Spring Boot para gestionar turnos en tiempo real.",
        link: "https://sportcenter-turnos.vercel.app/",
        github: "https://github.com/PradoUrqJose/ShiftSystemSportCenter",
        image: "/src/assets/projects/sportCenterShift.webp",
        tags: [TAGS.TAILWIND, TAGS.ANGULAR, TAGS.SPRING]
    }
];
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="mb-4 flex gap-x-2 flex-row">
                {tags.map(tag => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class={`size-4`} />
                            {tag.name}
                        </span>
                    </li>
                ))
                }
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10 mb-10"
                src={image} alt=`Captura de pantalla del proyecto ${image}`>
        </article>
    ))
}
